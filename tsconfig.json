{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}